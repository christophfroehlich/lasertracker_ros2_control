<launch>
  <arg name="mock_hardware" default="false"/>
  <arg name="bag_replay" default="false"/>
  <arg name="ethercat_hardware" default="true"/>

  <!--
    Define variables using the 'let' tag for clarity and reuse.
    This is similar to defining variables in your Python launch file.
  -->

  <!-- Get URDF via xacro -->
  <let name="robot_description_content"
    value="$(command '$(find-exec xacro) $(find-pkg-share lasertracker_ros2_control)/description/urdf/lasertracker.urdf.xacro mock_hardware:=$(var mock_hardware) bag_replay:=$(var bag_replay) ethercat_hardware:=$(var ethercat_hardware)')"/>

  <!-- Path to controller configurations -->
  <let name="robot_controllers"
    value="$(find-pkg-share lasertracker_ros2_control)/bringup/config/lasertracker_controllers.yaml"/>

  <!--
    Define the nodes to be launched.
    This is equivalent to the `Node` action in Python.
  -->

  <!-- Controller Manager Node -->
  <node pkg="controller_manager" exec="ros2_control_node" output="both" namespace="lasertracker">
    <param from="$(var robot_controllers)"/>
    <remap from="/robot_description" to="/lasertracker/robot_description"/>
  </node>

  <!-- Robot State Publisher Node -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher" output="both" namespace="lasertracker">
    <param name="robot_description" value="$(var robot_description_content)"/>
  </node>

  <!--
    Robot Controller Spawner
    This spawner is launched immediately. The spawner executable has its own
    internal logic to wait for the controller_manager to be available.
  -->
  <node pkg="controller_manager" exec="spawner"
    args="pose_calculator pose_broadcaster -c lasertracker/controller_manager --param-file $(var robot_controllers)"
    name="robot_controller_spawner"/>

</launch>
